{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "CommonJS",
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "node_modules/*/",
    ".vscode/*/"
  ]
}
